## Makefile.ds --
# 
# @configure_input@

#page
## ------------------------------------------------------------
## Global variables.
## ------------------------------------------------------------

CONTAINERS	= btree circular hash heap list map tree vector graph

INCLUDES	+= -I$(srcdir)/stub -I$(ucl_SRCDIR)

# This is defined in "Makefile.library". Here we exclude '-Wcast-qual';
# in this library we need to cast types to exclude the 'const'
# qualifier.

C_WARNINGS := $(filter-out -Wcast-qual,$(C_WARNINGS))

## ------------------------------------------------------------

#page
## ------------------------------------------------------------
## Libraries.
## ------------------------------------------------------------

ucl_PREREQUISITES	= $(wildcard $(addprefix $(ucl_SRCDIR)/,\
				$(ucl_stubsrc_HEADER_FILE) internal.h debug.h ucl_*.h))

$(eval $(call ds-c-library-with-stub,ucl))
$(eval $(call ds-h-files-installer,ucl_headers,$(ucl_SRCDIR),ucl_*.h))

## ------------------------------------------------------------

#page
## ------------------------------------------------------------
## Tests.
## ------------------------------------------------------------

PATTERNS	?= *.c

ifeq ($(strip $(ds_config_ENABLE_SHARED)),yes)

ucl_shared_tests_MAIN_SECTION		= shared-tests
ucl_shared_tests_programs_MAIN_SECTION	= shared-tests

ucl_shared_tests_PATTERNS		= $(PATTERNS)
ucl_shared_tests_BUILDDIR		= $(builddir)/shared-tests.d
ucl_shared_tests_PREREQUISITES		= $(ucl_SRCDIR)/ucl.h $(srcdir)/tests/testmain.h
ucl_shared_tests_CC_COMPILE_MORE_FLAGS	= -I$(ucl_SRCDIR) -I$(ucl_stubsrc_BUILDDIR)
ucl_shared_tests_programs_PREFIX	= shared-
ucl_shared_tests_programs_ENV		= LD_LIBRARY_PATH=$(ucl_shared_library_BUILDDIR)
ucl_shared_tests_programs_CC_BUILD_PROGRAM_PRE = \
	-L$(ucl_shared_library_BUILDDIR) -l$(ucl_shared_library_ID)

$(eval $(call ds-c-test-programs,ucl_shared))

test:		shared-tests
test-clean:	shared-tests-clean
test-realclean:	shared-tests-realclean

test-btree:	; $(MAKE) test PATTERNS=btree.c
test-circular:	; $(MAKE) test PATTERNS=circular.c
test-hash:	; $(MAKE) test PATTERNS=hash.c
test-heap:	; $(MAKE) test PATTERNS=heap.c
test-list:	; $(MAKE) test PATTERNS=list.c
test-map:	; $(MAKE) test PATTERNS=map.c
test-tree:	; $(MAKE) test PATTERNS=tree.c
test-vector:	; $(MAKE) test PATTERNS=vector.c
test-graph:	; $(MAKE) test PATTERNS=graph.c

endif # ds_config_ENABLE_SHARED = yes

## ------------------------------------------------------------

ifeq ($(strip $(ds_config_ENABLE_STUB)),yes)

ucl_stub_tests_MAIN_SECTION		= stub-tests
ucl_stub_tests_programs_MAIN_SECTION	= stub-tests

ucl_stub_tests_BUILDDIR			= $(builddir)/stub-tests.d
ucl_stub_tests_PREREQUISITES		= $(ucl_SRCDIR)/ucl.h $(srcdir)/tests/testmain.h
ucl_stub_tests_CC_COMPILE_MORE_FLAGS	= -I$(ucl_SRCDIR) -I$(ucl_stubsrc_BUILDDIR) -DUCL_ENABLE_STUB=1
ucl_stub_tests_programs_PREFIX		= stub-
ucl_stub_tests_programs_ENV		= LD_LIBRARY_PATH=$(ucl_stub_shared_library_BUILDDIR)
ucl_stub_tests_programs_CC_BUILD_PROGRAM_POST = $(ucl_stub_static_library_PATHNAME) $(LDFLAGS_DL)

$(eval $(call ds-c-test-programs,ucl_stub))

endif # ds_config_ENABLE_STUB = yes

## ------------------------------------------------------------

ifeq ($(strip $(ds_config_ENABLE_STATIC)),yes)

ucl_static_tests_MAIN_SECTION		= static-tests
ucl_static_tests_programs_MAIN_SECTION	= static-tests

ucl_static_tests_BUILDDIR		= $(builddir)/static-tests.d
ucl_static_tests_PREREQUISITES		= $(ucl_SRCDIR)/ucl.h $(srcdir)/tests/testmain.h
ucl_static_tests_CC_COMPILE_MORE_FLAGS	= -I$(ucl_SRCDIR) -I$(ucl_stubsrc_BUILDDIR)
ucl_static_tests_programs_PREFIX	= static-
ucl_static_tests_programs_CC_BUILD_PROGRAM_POST = $(ucl_static_library_PATHNAME)

$(eval $(call ds-c-test-programs,ucl_static))

endif # ds_config_ENABLE_STATIC = yes

## ------------------------------------------------------------

#page
## ------------------------------------------------------------
## Miscelleous stuff.
## ------------------------------------------------------------

ucl_examples_PREREQUISITES		= $(ucl_SRCDIR)/ucl.h
ucl_examples_CC_COMPILE_MORE_FLAGS	= -I$(ucl_SRCDIR) -I$(ucl_stubsrc_BUILDDIR)
ucl_examples_programs_ENV		= LD_LIBRARY_PATH=$(ucl_shared_library_BUILDDIR)

$(eval $(call ds-c-example-programs,ucl))


